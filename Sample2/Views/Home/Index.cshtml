@model Sample2.Models.NamesModel

<div class="text-center">
    <h1>Nick's Team Generator</h1>
    <p>Enter a list of names and the number of teams you want to create.</p>
    <h2>Assign Names to Teams</h2>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AssignTeams" method="post">
                <div class="form-group">
                    <label asp-for="Names">Enter the Names here (one per line):</label>
                    <textarea asp-for="Names" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="Names" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfTeams">Select the Number of Teams:</label>
                    <input asp-for="NumberOfTeams" class="form-control" type="number" min="2" max="10" />
                    <span asp-validation-for="NumberOfTeams" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Let's Make Some Teams!</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}